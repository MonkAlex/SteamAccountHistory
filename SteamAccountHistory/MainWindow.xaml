<Window x:Class="SteamAccountHistory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        Closed="MainWindow_OnClosed">
    <Grid>
        <Button Content="Load" HorizontalAlignment="Left" Margin="10,0,0,33.8" Width="75" Click="Load_Click" Height="22" VerticalAlignment="Bottom"/>
        <ListBox x:Name="ListBox" Margin="10,10,60.4,60.8" SelectionMode="Extended"/>
        <Button Content="Active" HorizontalAlignment="Left" Margin="90,0,0,33.8" Width="75" Click="Active_Click"  Height="22" VerticalAlignment="Bottom"/>
        <Button Content="Complete" HorizontalAlignment="Left" Margin="170,0,0,33.8" Width="75" Click="Complete_Click" Height="22" VerticalAlignment="Bottom"/>
        <Button Content="Ignore" HorizontalAlignment="Left" Margin="250,0,0,33.8" Width="75" Click="Ignore_Click"  Height="22" VerticalAlignment="Bottom"/>
        <Button Content="Planned" HorizontalAlignment="Left" Margin="330,0,0,33.8" Width="75" Click="Planned_Click"  Height="22" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
